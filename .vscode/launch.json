    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["--development"]
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/src",
            "sourceMapPathOverrides": {
                "webpack:///./src/*": "${webRoot}/*"
            }
        },
        {
            "name": "mud.py - localhost",
            "type": "debugpy",
            "request": "launch",
            "program": "mud.py",
            "args": [
                "--development"
            ],
            "console": "integratedTerminal",
        },
        {
            "name": "mud.py - api.nehsa.net",
            "type": "debugpy",
            "request": "launch",
            "program": "mud.py",
            "args": [],
            "console": "integratedTerminal",
        },
    ]
}